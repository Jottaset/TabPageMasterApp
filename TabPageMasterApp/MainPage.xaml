<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:TabPageMasterApp" 
             x:Class="TabPageMasterApp.MainPage"
             Title="Page one">
    
    
    <StackLayout>
        
        <!-- Place new controls here -->
        
        <Label Text="Concatenando"
               FontSize="25"
               FontAttributes="Bold"
               HorizontalOptions="Center" 
               VerticalOptions="CenterAndExpand" />
        
        
        <Entry Placeholder="Digite um nome"
               x:Name="label_01"
               FontSize="20"
               Keyboard="Text"/>
        
        <Entry Placeholder="Digite outro nome"
               x:Name="label_02"
               FontSize="20"
               Keyboard="Text"/>
        
        <Label Text=" "
               x:Name="label_result"
               FontSize="30"
               HorizontalOptions="Center" 
               VerticalOptions="CenterAndExpand" />
        
        <Button Text="Juntar"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand"
                TextColor="Blue"
                FontSize="30"
                Clicked="Concatenando"/>
        
    </StackLayout>
</ContentPage>